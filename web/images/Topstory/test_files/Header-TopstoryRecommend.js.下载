function ContentItem_content_inner_link(){
    $(document).on("click",".ContentItem-more,.ContentItem-content-inner,.ContentItem-content-cover",function () {
        for (classname1 in $(this).classList){
            alert(classname1);
            if (classname1 == "ContentItem-more"){
                alert(classname1);
            }
        }


        //$(this).html(ContentItem_content_Html);
    })
}
function ContentItemScroll() {
    $(".ContentItem").scroll(function () {
        var scrollTop = $(this).scrollTop();
        var windowheight = $(this).height();

        if (scrollTop>10){
            alert(scrollTop);
        }

    });
}

$(function () {
    ContentItemScroll();
    ContentItem_content_inner_link();
})